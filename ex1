import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        // 1. Using a specific Hex Color for the background (Deep Navy)
        backgroundColor: const Color(0xFF0F172A), 
        appBar: AppBar(
          title: const Text('Creative Flutter'),
          centerTitle: true,
          // 2. Customizing AppBar with a gradient or specific color
          backgroundColor: Colors.deepPurpleAccent,
          elevation: 10,
        ),
        body: Container(
          // 3. Adding a Background Gradient
          decoration: const BoxDecoration(
            gradient: LinearGradient(
              begin: Alignment.topLeft,
              end: Alignment.bottomRight,
              colors: [Color(0xFF1E293B), Color(0xFF0F172A)],
            ),
          ),
          child: Center(
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                const Text(
                  'Hello Flutter!',
                  style: TextStyle(
                    fontSize: 40,
                    fontWeight: FontWeight.w900,
                    // 4. Custom Orange-Pink color
                    color: Color(0xFFFB923C), 
                    letterSpacing: 2.0,
                    fontFamily: 'Georgia', // Using a built-in system font
                    shadows: [
                      Shadow(
                        blurRadius: 10.0,
                        color: Colors.black54,
                        offset: Offset(4.0, 4.0),
                      ),
                    ],
                  ),
                ),
                const SizedBox(height: 10),
                Text(
                  'DESIGNED BY YOU',
                  style: TextStyle(
                    fontSize: 16,
                    color: Colors.cyanAccent.withOpacity(0.8),
                    fontWeight: FontWeight.bold,
                    letterSpacing: 4.0,
                  ),
                ),
              ],
            ),
          ),
        ),
      ),
    );
  }
}
